# Environment Variables for Vercel Deployment

# API Configuration
VITE_API_URL=https://playchacha-backend.railway.app
VITE_API_VERSION=v1

# Sports Data API
VITE_SPORTS_API_KEY=your_sports_api_key_here
VITE_SPORTS_API_URL=https://api.sportsdata.io

# Payment Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key_here
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here

# Feature Flags
VITE_ENABLE_LIVE_BETTING=true
VITE_ENABLE_CRYPTO_PAYMENTS=true
VITE_ENABLE_GEOLOCATION=true

# Security
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# CDN Configuration
VITE_CDN_URL=https://cdn.playchacha.net

# App Configuration
VITE_APP_NAME=PlayChaCha
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

